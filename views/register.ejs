<main class="form-signin">
    <form action="/users/register" method="POST">
      <h1 class="h3 mb-3 fw-normal">ثبت نام کاربر</h1>

      <%- include('./includes/messages.ejs') %> 
  
      <div class="form-floating">
        <input type="text" class="form-control" name="fullname" id="inputFullname" placeholder="نام و نام خانوادگی">
        <label for="inputFullname">نام و نام خانوادگی</label>
      </div>
      <div class="form-floating">
        <input type="email" class="form-control" name="email" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">ایمیل</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="کلمه عبور">
        <label for="floatingPassword">کلمه عبور</label>
      </div>

      <div class="form-floating">
        <input type="password" class="form-control" id="inputConfirmPassword" name="confirmPassword" placeholder="تکرار کلمه عبور">
        <label for="inputConfirmPassword">تکرار کلمه عبور</label>
      </div>
  
      <div class="checkbox mb-3">
        <label>
          <a href="/users/login">اکانت کاربری دارم</a>
        </label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">ثبت نام</button>
    </form>
  </main>